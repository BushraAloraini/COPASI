<!--
    This file demostrates how to specify options to clo++
-->
<cloxx>
 <program>
   <comment>Program comment</comment>
   <description>Program description</description>
 </program>
 <config>
   <autohelp/>
   <variable name="cxx_namespace" value="copasi"></variable>
   <variable name="cxx_header_file" value="COptionParser.h"></variable>
   <variable name="cxx_header_def" value="COPASI_options"></variable>
   <variable name="cxx_class" value="COptionParser"></variable>
   <variable name="cxx_source_file" value="COptionParser.cpp"></variable>
 </config>
 <options>
   <option id="ConfigFile"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           hidden="no">
    <name>rc</name>
    <comment>
     The configuration file for copasi. The default is .copasirc in the
     home directory.
    </comment>
   </option>
   <option id="CopasiDir"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           hidden="no">
    <name>copasidir</name>
    <name>c</name>
    <comment> 
     The COPASI installation directory.
    </comment>
   </option>
   <option id="Home"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           hidden="no">
    <name>home</name>
    <comment>
     Your home directory.
    </comment>
   </option>
   <option id="Tmp"
           type="string"
           mandatory="no"
           strict="yes"
           location="both"
           hidden="no">
    <name>tmp</name>
    <name>t</name>
    <comment>
     The temp directory used for autosave.
    </comment>
   </option>
   <option id="Verbose"
           type="flag"
           mandatory="no"
           strict="yes"
           location="both"
           default="false"
           hidden="no">
    <name>verbose</name>
    <comment>
     Enable output of messages during runtime to std::error.
    </comment>
   </option>
   <option id="License"
           type="flag"
           mandatory="no"
           strict="yes"
           location="commandline"
           default="false"
           hidden="no">
    <name>license</name>
    <comment>
     Display the license.
    </comment>
   </option>
