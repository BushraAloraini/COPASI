<!--
    This file demostrates how to specify options to clo++
-->
<cloxx>
 <program>
   <comment>Program comment</comment>
   <description>Program description</description>
 </program>
 <config>
   <autohelp/>
   <variable name="cxx_namespace" value="copasi"></variable>
   <variable name="cxx_header_file" value="COptionParser.h"></variable>
   <variable name="cxx_header_def" value="COPASI_options"></variable>
   <variable name="cxx_class" value="COptionParser"></variable>
   <variable name="cxx_source_file" value="COptionParser.cpp"></variable>
 </config>
 <options>
   <option id="ConfigFile"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           hidden="no">
    <name>rc</name>
    <comment>The configuration file for copasi.</comment>
   </option>
   <option id="CopasiDir"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           hidden="no">
    <name>copasidir</name>
    <name>c</name>
    <comment>The location of suplementary files for copasi.</comment>
   </option>
   <option id="Home"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           hidden="no">
    <name>home</name>
    <comment>Your home directory.</comment>
   </option>
   <option id="SystemFunctionDB"
           type="string"
           mandatory="no"
           strict="yes"
           location="both"
           default="FunctionDB.gps"
           hidden="no">
    <name>systemFunctionDB</name>
    <comment>A write protected database of kinetic functions.</comment>
   </option>
   <option id="UserFunctionDB"
           type="string"
           mandatory="no"
           strict="yes"
           location="both"
           default="~/FunctionDB.cps"
           hidden="no">
    <name>userFunctionDB</name>
    <comment>The user extensible database of kinetic functions.</comment>
   </option>
   <option id="CopasiFile"
           type="string"
           mandatory="no"
           strict="yes"
           location="both"
           hidden="no">
    <name>copasiFile</name>
    <name>f</name>
    <comment>The file the model which specifies the model and task.</comment>
   </option>
   <option id="Save"
           type="string"
           mandatory="no"
           strict="yes"
           location="both"
           hidden="no">
    <name>save</name>
    <name>s</name>
    <comment>The file the model is saved in after work.</comment>
   </option>
   <option id="ImportSBML"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           hidden="no">
    <name>importSBML</name>
    <name>i</name>
    <comment>A SBML file to import.</comment>
   </option>
   <option id="ExportSBML"
           type="string"
           mandatory="no"
           strict="yes"
           location="commandline"
           hidden="no">
    <name>exportSBML</name>
    <name>e</name>
    <comment>The SBML file to export.</comment>
   </option>
   <option id="Default"
           type="string"
           mandatory="no"
           location="both"
           modifier="map"
           hidden="no">
    <name>default</name>
    <name>d</name>
    <comment>The SBML file to export.</comment>
   </option>
 </options>
</cloxx>
